<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_blanco"
    tools:context=".RegistryActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/azul_oscuro"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basketball"
            android:text="HOOPSCORE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/basquetball"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/basketball"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/txtTitulo"
            app:layout_constraintTop_toTopOf="@id/txtTitulo"
            app:layout_constraintBottom_toBottomOf="@id/txtTitulo" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/view"
        android:layout_width="306dp"
        android:layout_height="481dp"
        android:layout_marginTop="156dp"
        android:layout_marginBottom="94dp"
        android:background="@drawable/fondo_formulario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/campoUsuario"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/entradas_formulario"
        android:ems="10"
        android:fontFamily="@font/inter_bold"
        android:hint="Nombre de usuario"
        android:inputType="textPersonName|textCapWords"
        android:paddingLeft="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/campoNombre"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/entradas_formulario"
        android:ems="10"
        android:fontFamily="@font/inter_bold"
        android:hint="Nombre"
        android:inputType="textPersonName|textCapWords"
        android:paddingLeft="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/campoNacimiento"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/entradas_formulario"
        android:ems="10"
        android:fontFamily="@font/inter_bold"
        android:hint="Fecha de nacimiento"
        android:inputType="date"
        android:paddingLeft="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/campoContrasena"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/entradas_formulario"
        android:ems="10"
        android:fontFamily="@font/inter_bold"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/campoRepetirContrasena"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/entradas_formulario"
        android:ems="10"
        android:fontFamily="@font/inter_bold"
        android:hint="Repetir contraseña"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/campoCorreo"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/entradas_formulario"
        android:ems="10"
        android:fontFamily="@font/inter_bold"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/botonRegistro"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/boton_formulario"
        android:fontFamily="@font/inter_bold"
        android:onClick="onRegistrarClick"
        android:text="Registrarse"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/basketball"
        android:gravity="center"
        android:text="REGISTRARSE"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textInicioSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="674dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:onClick="IrInicioSesion"
        android:text="¿Ya tiene una cuenta? Iniciar sesion"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>